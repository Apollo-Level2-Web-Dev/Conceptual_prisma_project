generator client {
  provider = "prisma-client-js"
}

datasource db {
   provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  password String
  role  String
  books Book[]
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  publishedYear Int
  author     Author   @relation(fields: [authorId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])
  userId     Int
  user       User     @relation(fields: [userId], references: [id])

  authorId   Int
  categoryId Int
}

model Author {
  id     Int    @id @default(autoincrement())
  name   String
  birthYear Int
  books  Book[]
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String
  books Book[]
}

